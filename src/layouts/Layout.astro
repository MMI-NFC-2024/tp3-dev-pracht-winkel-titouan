---
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics</title>
  </head>
  <body>
    <nav>
      <label for="species">Choisir une espèce :</label>
      <select id="species">
        <option value="">-- Sélectionner --</option>
        <option value="Adelie">Adelie</option>
        <option value="Gentoo">Gentoo</option>
        <option value="Chinstrap">Chinstrap</option>
      </select>
    </nav>
    <nav class="bg-white shadow p-4 mb-6">
      <ul class="flex justify-center gap-6">
        <li>
          <a href="/" class="text-blue-600 hover:underline font-semibold"
            >Accueil</a
          >
        </li>
        <li>
          <a
            href="/all-species"
            class="text-blue-600 hover:underline font-semibold"
            >Toutes les espèces</a
          >
        </li>
        <li>
          <a
            href="/all-species-tabs"
            class="text-blue-600 hover:underline font-semibold"
            >Toutes les espèces (Tabs)</a
          >
        </li>
      </ul>
    </nav>
    <slot />

    <script>
      const select = document.querySelector("#species");
      if (select) {
        select.addEventListener("change", (evt) => {
          const value = evt.target.value;
          if (value) {
            // Redirection uniquement, pas de scroll
            location.pathname = "/species/" + value;
          }
        });
      }
    </script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
