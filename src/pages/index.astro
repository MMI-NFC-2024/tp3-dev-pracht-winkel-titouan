---
import PlotFigure from "../components/PlotFigure.astro";
import Layout from "../layouts/Layout.astro";
import * as Plot from "@observablehq/plot";
import penguins from "../assets/penguins.json";
---

<Layout>
  <h1 class="text-2xl font-bold mb-4">Test Astro et Plot (Observablehq)</h1>

  <PlotFigure
    options={{
      marks: [
        Plot.dot(penguins, {
          x: "culmen_length_mm",
          y: "culmen_depth_mm",
          stroke: "species",
        }),
      ],
    }}
  />

  <div class="mt-6">
    <a href="/all-species" class="text-blue-600 hover:underline font-semibold">
      Voir tous les graphiques par esp√®ce
    </a>
  </div>
</Layout>
